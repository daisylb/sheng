doctype html
html(lang='en')
  head
    title Sheng
    link(rel='stylesheet', href="https://rsms.me/inter/inter.css")
    link(rel='stylesheet', href="./index.scss", id='index-css')
    script(src="./switcher.ts", async=true)
  body(class='sheng-with-fonts')
    div.type
      div
        a(href='#' class='toggle', data-class='') No Sheng 
        a(href='#' class='toggle', data-class='sheng-no-fonts') Sheng default 
        a(href='#' class='toggle', data-class='sheng-with-fonts') With fonts 
      include:markdown-it ../README.md
      hr
      h2 Example content
      h3 Lists
      ul
        li Unordered list item 1
        li Unordered list item 2
      ol
        li Ordered list item 1
        li Ordered list item 2
        li(value=100) Ordered list item 100